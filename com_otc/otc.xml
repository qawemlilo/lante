<?xml version="1.0" encoding="utf-8"?><extension type="component" version="2.5.4" method="upgrade">    <name>OTC</name>    <creationDate>19 Aug 2013</creationDate>    <author>Qawelesizwe Mlilo</author>    <authorEmail>qawemlilo@gmail.com</authorEmail>    <authorUrl>http://www.ragingflame.co.za</authorUrl>    <copyright>(C)2013 Raging Flame</copyright>    <license>(C)2013 Raging Flame</license>    <version>0.0.9</version>    <description>LanteOTC</description>    <install>        <sql>            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>        </sql>    </install>    <uninstall>        <sql>            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>        </sql>    </uninstall>        <update>        <schemas>            <schemapath type="mysql">sql/updates/mysql</schemapath>        </schemas>    </update>        <files folder="site">        <filename>index.html</filename>        <filename>otc.php</filename>        <filename>controller.php</filename>        <folder>controllers</folder>        <folder>views</folder>        <folder>assets</folder>        <folder>models</folder>    </files>        <media destination="com_otc" folder="media">        <folder>logos</folder>    </media>        <administration>        <menu>LanteOTC</menu>                    <files folder="admin">            <filename>index.html</filename>            <filename>otc.php</filename>            <folder>sql</folder>        </files>    </administration></extension>